@using Fr.EQL.AI109.Tontapat.Model
@using Fr.EQL.AI109.Tontapat.Dto

@{
    ViewData["Title"] = "Paiement de votre prestation";
}
@model OffreToPrestationDto
<div class="box-boutons">
    <form id="offre" method="get" asp-controller="Offre" asp-action="NouvellePrestation">
        <input type="hidden" name="IdOffre" value="@Model.IdOffre" />
        <input type="hidden" name="IdTerrain" value="@Model.IdTerrain" />
        <input type="hidden" name="IdTypeTonte" value="@Model.IdTypeTonte" />
        <input type="hidden" name="Distance" value="@Model.Distance" />
        <input type="hidden" name="NbBetes" value="@Model.NbBetes" />
        <input type="hidden" name="TypeInstallation" value="@Model.TypeInstallation" />
        <input type="hidden" name="DateDebut" value="@Model.DateDebut.ToString("dd-MM-yyyy")" />
        <input type="hidden" name="DateFin" value="@Model.DateFin.ToString("dd-MM-yyyy")" />
        <input type="hidden" name="Duree" value="@Model.Duree" />
        <input type="hidden" name="PrixInstallationBetail" value="@(((string)(Model.PrixInstallationBetail).ToString().Replace(',','.')))" />
        <input type="hidden" name="PrixInstallationCloture" value="@(((string)(Model.PrixInstallationCloture).ToString().Replace(',','.')))" />
        <input type="hidden" name="PrixBetail" value="@(((string)(Model.PrixBetail).ToString().Replace(',','.')))" />
        <input type="hidden" name="PrixIntervention" value="@(((string)(Model.PrixIntervention).ToString().Replace(',','.')))" />
        <input type="hidden" name="PrixService" value="@(((string)(Model.PrixService).ToString().Replace(',','.')))" />
        <input type="hidden" name="PrixTVA" value="@(((string)(Model.PrixTVA).ToString().Replace(',','.')))" />
        <input type="hidden" name="PrixTotal" value="@(((string)(Model.PrixTotal).ToString().Replace(',','.')))" />
        <button class="btn-success" type="submit" form="offre" value="submit">Payer et valider</button>
        <button class="btn-primary" type="reset" form="offre" value="negociate">Annuler</button>
    </form>

</div>